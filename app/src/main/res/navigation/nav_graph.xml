<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.musicplayer.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchMusicFragment"
            app:destination="@id/searchMusicFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.musicplayer.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_searchLyricsFragment"
            app:destination="@id/searchLyricsFragment" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.musicplayer.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchLyricsFragment"
        android:name="com.example.musicplayer.SearchLyricsFragment"
        android:label="fragment_lyrics_search"
        tools:layout="@layout/fragment_lyrics_search">
        <action
            android:id="@+id/action_searchLyricsFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchMusicFragment"
        android:name="com.example.musicplayer.SearchMusicFragment"
        android:label="fragment_search_music"
        tools:layout="@layout/fragment_search_music">
        <action
            android:id="@+id/action_searchMusicFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>